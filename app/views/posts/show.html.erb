<div class="container">
	<div id="post-show" class="row">
		<h1 class="title">
		  <%= @post.title %>
		</h1>

		<p>
			<%= @post.body %>
		</p>

		<p class="date">
		  Submitted <%= time_ago_in_words(@post.created_at) %> Ago
		    <%= link_to 'Edit Post', edit_post_path(@post) %>
		    <%= link_to 'Delete', post_path(@post), method: :delete, data: { confirm: "Are you sure?" } %>
		</p>
	</div>
</div>