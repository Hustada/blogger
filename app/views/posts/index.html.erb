

<div id="main-container" class="container">
	<div class="row">

<div class="container">
  <div class="row">
    <div class="col-md-3">
    <div class = "well" id = "newsletter_well">
                <h3 id = "newsletter-title">Want the latest news?</h3>
                <div class="input-group">
                  <span class="input-group-addon"><i class="fa fa-envelope"></i></span>
                  <input type="text" class="form-control" placeholder="Enter email here">
                </div>
                </br>
                <center>
                  <button class="btn btn-default" type="submit">Submit</button>
                </center>
            </div>
  	  <ul class="nav nav-pills nav-stacked" id="sidebar-nav">
		  <li role="presentation"><%=link_to 'Author', author_path %></li>
		  <li role="presentation"><%=link_to 'Book', book_path %></li>
		  <li role="presentation"><%=link_to 'Contact', contact_path %></li>
		  <li role="presentation"><%=link_to 'About', about_path %></li>
    </ul>
  	</div>
  	<div class="col-md-9">
  	<div class="page-header">
      <h1>Not Quite Love<small></small></h1>
    </div>
    <div class="jumbotron">
      <h2 class="jumbo-title">A Real Life Romantic Dramedy</h2>
        <p class="index-author">by Ryan Onstad</p>
    </div>
  		<% @posts.each_with_index do |post, index| %>
    <h2 class="title"><%= link_to post.title, post %></h2>
      <p><%= simple_format(index.zero? ?  post.body : truncate(post.body, length: 300)) %></p>
      <p class="date"><%= post.created_at.strftime("%B, %d, %Y") %></p>
    <% end %>
      <div class="buttons">
        <button class="button"><%= link_to 'New Post', new_post_path %></button>
        <button class="button">Log Out</button>
      </div>
  	</div>
    <% flash.each do |name, msg| %>
    <%= content_tag(:div, msg, class: "alert") %>
    <% end %>
    <% yield %>
  </div>	
</div>