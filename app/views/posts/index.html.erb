<div class="container">
  <div class="row">

    <div class="col-md-2" id="index-sidebar">
      <ul class="nav nav-pills nav-stacked" data-spy="affix" id="sidebar-nav">
        <li role="presentation"><%=link_to 'Author', author_path %></li>
        <li role="presentation"><%=link_to 'Book', book_path %></li>
        <li role="presentation"><%=link_to 'Contact', contact_path %></li>
        <li role="presentation"><%=link_to 'Something Else', '#' %></li>
      </ul>
    </div>










    <div class="col-md-8">
      <% @posts.each_with_index do |post, index| %>
    <h2 class="title"><%= link_to post.title, post %></h2>
      <p><%= simple_format(index.zero? ?  post.body : truncate(post.body, length: 300)) %></p>
      <p>Comments (<%=link_to "#{post.comments.count}", post_path(post) %>)<p>
      <p class="date"><%= post.created_at.strftime("%B, %d, %Y") %></p>
    <% end %>

    <center><%= will_paginate @posts %></center>

    <div class="buttons">
      <% if logged_in? %>
        <button class="button"><%= link_to 'New Post', new_post_path %></button>
        <button class="button">Log Out</button>
        <% end %>
      </div>
    </div>






  <div class="col-md-2">
    <div class = "well" id = "newsletter_well">
      <h3 id = "newsletter-title">Want the latest news?</h3>
        <div class="input-group">
          <span class="input-group-addon"><i class="fa fa-envelope"></i></span>
            <input type="text" class="form-control" placeholder="Enter email here">
        </div>
              </br>
        <center>
          <button class="btn btn-default" type="submit">Submit</button>
        </center>
    </div>
  </div>
  </div>
</div>